<div class="bg-white">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
    <div class="text-center mb-2">
      <div data-controller="secret-retrieval">
        <%= hidden_field_tag "content", @secret.content, "data-secret-retrieval-target": "content"  %>
        <%= hidden_field_tag "iv", @secret.iv, "data-secret-retrieval-target": "iv"  %>
        <div class="mb-2">
          <label for="email" class="block text-sm font-medium text-gray-700">Your key</label>
          <div class="mt-1 flex rounded-md shadow-sm">
            <div class="relative flex items-stretch flex-grow focus-within:z-10">
              <input type="text" class="focus:ring-indigo-500 focus:border-indigo-500 block w-full rounded pl-10 sm:text-sm border-gray-300" data-secret-retrieval-target="key">
            </div>
          </div>
        </div>

        <%= form_for @secret, method: :delete, html: { "data-secret-retrieval-target": "form" } do; end %>

        <%= button_tag "Decrypt ", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", data: { "action": "click->secret-retrieval#decrypt" } %>
        <div class="mt-4">
          <textarea rows="4" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" readonly data-secret-retrieval-target="secret"></textarea>
        </div>
      </div>
    </div>
  </div>
</div>
